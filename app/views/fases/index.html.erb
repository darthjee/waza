<p id="notice"><%= notice %></p>

<h1>Listing Fases</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fases.each do |fase| %>
      <tr>
        <td><%= fase.name %></td>
        <td><%= link_to 'Show', fase %></td>
        <td><%= link_to 'Edit', edit_fase_path(fase) %></td>
        <td><%= link_to 'Destroy', fase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

